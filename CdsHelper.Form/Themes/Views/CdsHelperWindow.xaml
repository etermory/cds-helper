<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Form.UI.Views"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units;assembly=CdsHelper.Support">

    <!-- 타이틀바 버튼 스타일 -->
    <Style x:Key="TitleBarButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#3A6EA5"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2A5A8A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 닫기 버튼 스타일 -->
    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="0">
                        <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E81123"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F1707A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type views:CdsHelperWindow}">
        <Setter Property="Title" Value="{Binding WindowTitle}" />
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="BorderBrush" Value="#104F89"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:CdsHelperWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 커스텀 타이틀바 -->
                            <Border x:Name="PART_TitleBar" Grid.Row="0" Background="#104F89">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 아이콘 -->
                                    <Image Grid.Column="0" Source="{TemplateBinding Icon}"
                                           Width="20" Height="20" Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           WindowChrome.IsHitTestVisibleInChrome="True"/>

                                    <!-- 제목 -->
                                    <TextBlock Grid.Column="1"
                                               Text="{TemplateBinding Title}"
                                               Foreground="White"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>

                                    <!-- 윈도우 컨트롤 버튼 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button x:Name="PART_MinimizeButton" Style="{StaticResource TitleBarButtonStyle}">
                                            <Path Data="M 0 0 H 10" Stroke="White" StrokeThickness="1"
                                                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Button>
                                        <Button x:Name="PART_MaximizeButton" Style="{StaticResource TitleBarButtonStyle}">
                                            <Rectangle Width="10" Height="10" Stroke="White" StrokeThickness="1"/>
                                        </Button>
                                        <Button x:Name="PART_RestoreButton" Style="{StaticResource TitleBarButtonStyle}" Visibility="Collapsed">
                                            <Grid>
                                                <Rectangle Width="8" Height="8" Stroke="White" StrokeThickness="1" Margin="0,2,2,0"/>
                                                <Rectangle Width="8" Height="8" Stroke="White" StrokeThickness="1" Margin="2,0,0,2"/>
                                            </Grid>
                                        </Button>
                                        <Button x:Name="PART_CloseButton" Style="{StaticResource CloseButtonStyle}">
                                            <Path Data="M 0 0 L 10 10 M 0 10 L 10 0" Stroke="White" StrokeThickness="1"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- 메뉴바 -->
                            <Menu Grid.Row="1" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                <MenuItem Header="파일">
                                    <MenuItem Header="세이브 파일 열기" Command="{Binding LoadSaveCommand}"/>
                                </MenuItem>
                                <MenuItem Header="설정" x:Name="PART_SettingsMenu" />
                                <MenuItem Header="도구">
                                    <MenuItem Header="이벤트 큐 보기" x:Name="PART_EventQueueMenu" />
                                    <MenuItem Header="DB 테이블 보기" x:Name="PART_DbTableViewerMenu" />
                                </MenuItem>
                            </Menu>

                            <!-- 세이브 파일 정보 바 -->
                            <Border Grid.Row="2" Background="#E3F2FD" BorderBrush="#90CAF9" BorderThickness="0,0,0,1" Padding="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="세이브 파일 열기" Width="120" Height="28" Margin="0,0,15,0"
                                            Command="{Binding LoadSaveCommand}"
                                            Background="#1976D2" Foreground="White" BorderThickness="0" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                                        CornerRadius="3" Padding="10,5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBlock VerticalAlignment="Center" Foreground="#555" Margin="0,0,5,0">
                                        <Run Text="파일:"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding FilePath}" VerticalAlignment="Center" Foreground="#1976D2" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- 메인 컨텐츠 영역 -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="PART_MenuColumn" Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 아코디언 사이드 메뉴 -->
                                <Grid Grid.Column="0">
                                    <units:AccordionControl x:Name="PART_AccordionMenu">
                                    <!-- 데이터 그룹 -->
                                    <units:AccordionItem Header="데이터" IsGroup="True" IsExpanded="True">
                                        <units:AccordionItem Header="플레이어" Tag="PlayerContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                        <units:AccordionItem Header="캐릭터" Tag="CharacterContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                        <units:AccordionItem Header="도서" Tag="BookContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                        <units:AccordionItem Header="도시" Tag="CityContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M15 11V5l-3-3-3 3v2H3v14h18V11h-6zm-8 8H5v-2h2v2zm0-4H5v-2h2v2zm0-4H5V9h2v2zm6 8h-2v-2h2v2zm0-4h-2v-2h2v2zm0-4h-2V9h2v2zm0-4h-2V5h2v2zm6 12h-2v-2h2v2zm0-4h-2v-2h2v2z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                        <units:AccordionItem Header="후원자" Tag="PatronContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                    </units:AccordionItem>

                                    <!-- 아이템 그룹 -->
                                    <units:AccordionItem Header="아이템" IsGroup="True" IsExpanded="True">
                                        <units:AccordionItem Header="선수상" Tag="FigureheadContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M12 2L4.5 20.29l.71.71L12 18l6.79 3 .71-.71z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                        <units:AccordionItem Header="아이템" Tag="ItemContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                    </units:AccordionItem>

                                    <!-- 지도 -->
                                    <units:AccordionItem Header="지도" Tag="MapContent">
                                        <units:AccordionItem.Icon>
                                            <Path Data="M20.5 3l-.16.03L15 5.1 9 3 3.36 4.9c-.21.07-.36.25-.36.48V20.5c0 .28.22.5.5.5l.16-.03L9 18.9l6 2.1 5.64-1.9c.21-.07.36-.25.36-.48V3.5c0-.28-.22-.5-.5-.5zM15 19l-6-2.11V5l6 2.11V19z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                        </units:AccordionItem.Icon>
                                    </units:AccordionItem>

                                    <!-- 도구 그룹 -->
                                    <units:AccordionItem Header="도구" IsGroup="True" IsExpanded="True">
                                        <units:AccordionItem Header="스핑크스" Tag="SphinxCalculatorContent">
                                            <units:AccordionItem.Icon>
                                                <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14h-2v-4H8v-2h4V7h2v4h4v2h-4v4z"
                                                      Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </units:AccordionItem.Icon>
                                        </units:AccordionItem>
                                    </units:AccordionItem>
                                </units:AccordionControl>
                                </Grid>

                                <!-- 컨텐츠 영역 (Region) -->
                                <Grid Grid.Column="1" Background="#F5F5F5">
                                    <!-- 토글 버튼 (왼쪽 경계에 위치, 아코디언 위로 겹침) -->
                                    <Button x:Name="PART_MenuToggleButton"
                                            Width="24" Height="24"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Margin="-12,5,0,0"
                                            Cursor="Hand" ToolTip="메뉴 접기/펼치기">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="#1A6BB5"
                                                        CornerRadius="12" Width="24" Height="24">
                                                    <Path x:Name="arrow" Data="M 6 0 L 0 5 L 6 10"
                                                          Stroke="White" StrokeThickness="2"
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          Width="6" Height="10" Stretch="Uniform"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3A6EA5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <ContentControl x:Name="PART_ContentRegion"
                                                    Margin="5"/>
                                </Grid>
                            </Grid>

                            <!-- 하단 상태바 -->
                            <StatusBar Grid.Row="4" Background="#104F89">
                                <StatusBarItem>
                                    <TextBlock Text="{Binding DataContext.StatusText, RelativeSource={RelativeSource TemplatedParent}}" Foreground="White" />
                                </StatusBarItem>
                                <StatusBarItem HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding DataContext.FilePath, RelativeSource={RelativeSource TemplatedParent}}" Foreground="#B0C4DE" FontSize="11" />
                                </StatusBarItem>
                            </StatusBar>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="PART_MaximizeButton" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_RestoreButton" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsActive" Value="False">
                            <Setter TargetName="PART_TitleBar" Property="Background" Value="#6B6B6B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
