<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Form.UI.Views"
                    xmlns:main="clr-namespace:CdsHelper.Main.UI.Views;assembly=CdsHelper.Main">

    <Style TargetType="{x:Type views:CdsHelperWindow}">
        <Setter Property="Background" Value="Azure" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:CdsHelperWindow}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- TabControl -->
                        <TabControl Grid.Row="0" Margin="5">
                            <!-- 캐릭터 탭 -->
                            <TabItem Header="캐릭터">
                                <main:CharacterContent DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}" />
                            </TabItem>

                            <!-- 도서 탭 -->
                            <TabItem Header="도서">
                                <main:BookContent DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}" />
                            </TabItem>

                            <!-- 도시 탭 -->
                            <TabItem Header="도시">
                                <main:CityContent DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}" />
                            </TabItem>

                            <!-- 후원자 탭 -->
                            <TabItem Header="후원자">
                                <main:PatronContent DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}" />
                            </TabItem>

                            <!-- 지도 탭 -->
                            <TabItem Header="지도">
                                <main:MapContent x:Name="PART_MapContent" DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}" />
                            </TabItem>
                        </TabControl>

                        <!-- 하단 상태바 -->
                        <StatusBar Grid.Row="1">
                            <StatusBarItem>
                                <TextBlock Text="{Binding DataContext.StatusText, RelativeSource={RelativeSource TemplatedParent}}" />
                            </StatusBarItem>
                        </StatusBar>
                    </Grid>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
