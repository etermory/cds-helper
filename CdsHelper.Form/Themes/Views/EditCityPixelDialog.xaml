<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Form.UI.Views">

    <Style TargetType="{x:Type views:EditCityPixelDialog}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:EditCityPixelDialog}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 상단: 도시명 + 좌표 입력 -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{TemplateBinding CityName}"
                                       FontWeight="Bold" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,20,0" />

                            <TextBlock Grid.Column="1" Text="PixelX:" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Grid.Column="2" x:Name="PART_PixelXTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                            <TextBlock Grid.Column="3" Text="PixelY:" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Grid.Column="4" x:Name="PART_PixelYTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                            <CheckBox Grid.Column="5" x:Name="PART_HasLibraryCheckBox" Content="도서관"
                                      VerticalAlignment="Center" Margin="0,0,15,0" />

                            <TextBlock Grid.Column="6" Text="(지도 클릭으로 좌표 선택)"
                                       VerticalAlignment="Center" Margin="0,0,0,0"
                                       Foreground="Gray" FontStyle="Italic" />
                        </Grid>

                        <!-- 중앙: 지도 -->
                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                            <ScrollViewer x:Name="PART_MapScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image x:Name="PART_MapImage" Stretch="None" Cursor="Cross" />
                                    <Canvas x:Name="PART_MapCanvas"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            IsHitTestVisible="False" />
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <!-- 하단: 버튼 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                    HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="PART_OkButton" Content="확인" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True" />
                            <Button x:Name="PART_CancelButton" Content="취소" Width="80" Height="30" IsCancel="True" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
