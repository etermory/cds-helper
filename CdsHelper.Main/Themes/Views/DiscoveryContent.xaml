<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Main.UI.Views"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units;assembly=CdsHelper.Support">

    <Style TargetType="{x:Type views:DiscoveryContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:DiscoveryContent}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 상단 필터 -->
                        <WrapPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
                            <TextBlock Text="발견물명:" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Width="150" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding NameSearch, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="힌트명:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <TextBox Width="150" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding HintSearch, UpdateSourceTrigger=PropertyChanged}" />

                            <CheckBox Content="힌트 있는 것만" VerticalAlignment="Center" Margin="10,0,10,0"
                                      IsChecked="{Binding ShowOnlyWithHint}" />

                            <TextBlock Text="발견:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <ComboBox Width="80" Height="25" VerticalAlignment="Center"
                                      ItemsSource="{Binding DiscoveryFilterOptions}"
                                      SelectedIndex="{Binding DiscoveryFilterIndex}" />

                            <units:ResetButton Margin="10,0,0,0"
                                               Command="{Binding ResetFilterCommand}"/>
                        </WrapPanel>

                        <!-- 데이터 그리드 -->
                        <units:CdsDataGrid Grid.Row="1"
                                  ItemsSource="{Binding Discoveries}"
                                  Margin="10">
                            <units:CdsDataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <!-- 힌트 없음 (회색) -->
                                        <DataTrigger Binding="{Binding HintName}" Value="">
                                            <Setter Property="Foreground" Value="#888888" />
                                        </DataTrigger>
                                        <!-- 힌트 획득 (연한 초록색) -->
                                        <DataTrigger Binding="{Binding IsHintObtained}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9" />
                                        </DataTrigger>
                                        <!-- 발견물 발견 (연한 파란색) -->
                                        <DataTrigger Binding="{Binding IsDiscoveryFound}" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD" />
                                        </DataTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#E8F4FC"/>
                                        </MultiTrigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#104F89"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </units:CdsDataGrid.RowStyle>
                            <units:CdsDataGrid.Columns>
                                <DataGridTextColumn Header="번호" Binding="{Binding Id}" Width="50" />
                                <DataGridTextColumn Header="발견물명" Binding="{Binding Name}" Width="180" />
                                <DataGridTextColumn Header="발견" Binding="{Binding DiscoveryStatusDisplay}" Width="45" />
                                <DataGridTextColumn Header="힌트" Binding="{Binding HintName}" Width="150" />
                                <DataGridTextColumn Header="선행 발견물" Binding="{Binding ParentNames}" Width="250" />
                                <DataGridTextColumn Header="등장조건" Binding="{Binding AppearCondition}" Width="80" />
                                <DataGridTextColumn Header="도서명" Binding="{Binding BookName}" Width="*" />
                            </units:CdsDataGrid.Columns>
                        </units:CdsDataGrid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
