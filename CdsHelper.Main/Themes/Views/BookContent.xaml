<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Main.UI.Views"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units;assembly=CdsHelper.Support">

    <Style TargetType="{x:Type views:BookContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:BookContent}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 도서 검색 필터 -->
                        <WrapPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
                            <TextBlock Text="도서명:" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Width="120" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding BookNameSearch, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="소재 도서관:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <TextBox Width="120" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding LibrarySearch, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="게제 힌트:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <TextBox Width="120" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding HintSearch, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="언어:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <ComboBox Width="120" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                      ItemsSource="{Binding Languages}"
                                      SelectedItem="{Binding SelectedLanguage}" />

                            <TextBlock Text="필요 스킬:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <ComboBox Width="120" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                      ItemsSource="{Binding RequiredSkills}"
                                      SelectedItem="{Binding SelectedRequiredSkill}" />

                            <Button Content="필터 초기화" Width="100" Height="30" Margin="10,0,0,0"
                                    Command="{Binding ResetBookFilterCommand}" />

                            <Button Content="도서관 매핑" Width="100" Height="30" Margin="10,0,0,0"
                                    Command="{Binding EditLibraryMappingCommand}" />
                        </WrapPanel>

                        <!-- 도서 데이터 그리드 -->
                        <units:CdsDataGrid Grid.Row="1"
                                  ItemsSource="{Binding Books}"
                                  SelectedItem="{Binding SelectedBook}"
                                  Margin="10">
                            <units:CdsDataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <!-- 읽기 불가 (언어/스킬 부족) -->
                                        <DataTrigger Binding="{Binding CanRead}" Value="False">
                                            <Setter Property="Foreground" Value="#D32F2F" />
                                        </DataTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#E8F4FC"/>
                                        </MultiTrigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#104F89"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </units:CdsDataGrid.RowStyle>
                            <units:CdsDataGrid.Columns>
                                <DataGridTextColumn Header="도서명" Binding="{Binding Name}" Width="200" />
                                <DataGridTextColumn Header="언어" Binding="{Binding Language}" Width="150" />
                                <DataGridTextColumn Header="소재 도서관" Binding="{Binding Library}" Width="*" MinWidth="200" />
                                <DataGridTextColumn Header="게제 힌트" Binding="{Binding Hint}" Width="200" />
                                <DataGridTextColumn Header="필요" Binding="{Binding Required}" Width="100" />
                                <DataGridTextColumn Header="개제조건" Binding="{Binding Condition}" Width="200" />
                            </units:CdsDataGrid.Columns>
                        </units:CdsDataGrid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
