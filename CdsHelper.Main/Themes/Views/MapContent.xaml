<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Main.UI.Views">

    <Style TargetType="{x:Type views:MapContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MapContent}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 상단 컨트롤 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                            <TextBlock Text="대항해시대3 발견물 지도" FontSize="16" FontWeight="Bold"
                                       VerticalAlignment="Center" />
                            <Button x:Name="PART_BtnZoomIn" Content="확대 +" Width="60" Height="30" Margin="20,0,5,0" />
                            <Button x:Name="PART_BtnZoomOut" Content="축소 -" Width="60" Height="30" Margin="5,0,5,0" />
                            <Button x:Name="PART_BtnZoomReset" Content="원본" Width="60" Height="30" Margin="5,0,0,0" />
                            <CheckBox x:Name="PART_ChkShowCityLabels" Content="도시명 표시"
                                      VerticalAlignment="Center" Margin="20,0,0,0" IsChecked="False" />
                            <CheckBox x:Name="PART_ChkShowCoordinates" Content="좌표 표시"
                                      VerticalAlignment="Center" Margin="10,0,0,0" IsChecked="False" />
                            <CheckBox x:Name="PART_ChkShowCulturalSpheres" Content="문화권 표시"
                                      VerticalAlignment="Center" Margin="10,0,0,0" IsChecked="False" />
                            <TextBlock x:Name="PART_TxtCenterPosition" Text="중심: -" VerticalAlignment="Center"
                                       Margin="20,0,0,0" FontFamily="Consolas" Foreground="#104F89" FontWeight="Bold" />
                            <TextBlock x:Name="PART_TxtMapCoordinates" Text="마우스: -" VerticalAlignment="Center"
                                       Margin="15,0,0,0" FontFamily="Consolas" Foreground="Gray" />
                        </StackPanel>

                        <!-- 지도 영역 (경도 눈금 + 위도 눈금 + 지도) -->
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 경도 눈금 (상단) -->
                            <Canvas x:Name="PART_LongitudeScale" Grid.Row="0" Grid.Column="1"
                                    Background="#F0F0F0" ClipToBounds="True"/>

                            <!-- 위도 눈금 (좌측) -->
                            <Canvas x:Name="PART_LatitudeScale" Grid.Row="1" Grid.Column="0"
                                    Background="#F0F0F0" ClipToBounds="True"/>

                            <!-- 지도 이미지 -->
                            <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          x:Name="PART_MapScrollViewer">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image x:Name="PART_ImgMap"
                                           Stretch="None"
                                           RenderTransformOrigin="0,0">
                                        <Image.LayoutTransform>
                                            <ScaleTransform x:Name="PART_MapScaleTransform" ScaleX="1" ScaleY="1" />
                                        </Image.LayoutTransform>
                                    </Image>
                                    <Canvas x:Name="PART_MapCanvas"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            IsHitTestVisible="True"
                                            Background="Transparent">
                                        <Canvas.LayoutTransform>
                                            <ScaleTransform x:Name="PART_CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                                        </Canvas.LayoutTransform>
                                    </Canvas>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
