<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Main.UI.Views">

    <Style TargetType="{x:Type views:SphinxCalculatorContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:SphinxCalculatorContent}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- ========== 유형 1: 기본형 ========== -->
                            <TextBlock Text="유형 1: 기본형" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="괴물의 수와 다리의 총 수를 알 때" Foreground="Gray" Margin="0,0,0,10"/>

                            <GroupBox Header="입력" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="A 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding LegsPerTypeA, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Column="3" Text="B 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="4" Text="{Binding LegsPerTypeB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Column="6" Text="괴물 총 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="7" Text="{Binding TotalCreatures, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Column="9" Text="다리 총 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="10" Text="{Binding TotalLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="결과" Padding="10" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding LegsPerTypeA, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding TypeACount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#104F89" Margin="0,0,30,0"/>

                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding LegsPerTypeB, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding TypeBCount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="풀이 과정" Padding="10" Margin="0,0,0,30">
                                <TextBox Text="{Binding SolutionText, Mode=OneWay}" IsReadOnly="True"
                                         Background="#FAFAFA" BorderThickness="0" FontFamily="Consolas"
                                         FontSize="12" Height="180" VerticalScrollBarVisibility="Auto"/>
                            </GroupBox>

                            <!-- ========== 유형 2: 변환형 ========== -->
                            <TextBlock Text="유형 2: 변환형" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="세월이 지나 다리 수가 변할 때" Foreground="Gray" Margin="0,0,0,10"/>

                            <GroupBox Header="입력" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 초기 상태 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="A 초기 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding T2_InitialLegsA, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="B 초기 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding T2_InitialLegsB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="0" Grid.Column="6" Text="초기 다리 합계:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="7" Text="{Binding T2_InitialTotalLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <!-- 변환 후 -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="A 변환 후 다리:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding T2_AfterLegsA, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="2" Grid.Column="3" Text="B 변환 마리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding T2_TransformCountB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="2" Grid.Column="6" Text="B 변환 후 다리:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="7" Text="{Binding T2_AfterLegsB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="2" Grid.Column="9" Text="최종 다리 합계:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="10" Text="{Binding T2_FinalTotalLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="결과" Padding="10" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="처음 " VerticalAlignment="Center"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding T2_InitialLegsA, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding T2_TypeACount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#104F89" Margin="0,0,30,0"/>

                                    <TextBlock Text="처음 " VerticalAlignment="Center"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding T2_InitialLegsB, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding T2_TypeBCount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="풀이 과정" Padding="10" Margin="0,0,0,30">
                                <TextBox Text="{Binding T2_SolutionText, Mode=OneWay}" IsReadOnly="True"
                                         Background="#FAFAFA" BorderThickness="0" FontFamily="Consolas"
                                         FontSize="12" Height="220" VerticalScrollBarVisibility="Auto"/>
                            </GroupBox>

                            <!-- ========== 유형 3: 변환+탄생형 ========== -->
                            <TextBlock Text="유형 3: 변환+탄생형" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="세월이 지나 다리 수가 변하고 새 괴물이 탄생할 때" Foreground="Gray" Margin="0,0,0,10"/>

                            <GroupBox Header="입력" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 초기 상태 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="A 초기 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding T3_InitialLegsA, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="B 초기 다리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding T3_InitialLegsB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="0" Grid.Column="6" Text="초기 다리 합계:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="7" Text="{Binding T3_InitialTotalLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <!-- 변환 -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="A 변환 후 다리:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding T3_AfterLegsA, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="2" Grid.Column="3" Text="B 변환 마리 수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding T3_TransformCountB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="2" Grid.Column="6" Text="B 변환 후 다리:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="2" Grid.Column="7" Text="{Binding T3_AfterLegsB, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <!-- 신규 탄생 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="신규 괴물 배수:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding T3_NewCreatureMultiplier, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="4" Grid.Column="3" Text="신규 괴물 다리:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="4" Grid.Column="4" Text="{Binding T3_NewCreatureLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>

                                    <TextBlock Grid.Row="4" Grid.Column="6" Text="최종 다리 합계:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="4" Grid.Column="7" Text="{Binding T3_FinalTotalLegs, UpdateSourceTrigger=PropertyChanged}" Padding="5,3"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="결과" Padding="10" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="처음 " VerticalAlignment="Center"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding T3_InitialLegsA, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding T3_TypeACount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#104F89" Margin="0,0,30,0"/>

                                    <TextBlock Text="처음 " VerticalAlignment="Center"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding T3_InitialLegsB, Mode=OneWay}"/><Run Text="다리: "/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding T3_TypeBCount, StringFormat={}{0}마리}" FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="풀이 과정" Padding="10">
                                <TextBox Text="{Binding T3_SolutionText, Mode=OneWay}" IsReadOnly="True"
                                         Background="#FAFAFA" BorderThickness="0" FontFamily="Consolas"
                                         FontSize="12" Height="280" VerticalScrollBarVisibility="Auto"/>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
