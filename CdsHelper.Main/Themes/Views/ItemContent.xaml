<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Main.UI.Views"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units;assembly=CdsHelper.Support">

    <Style TargetType="{x:Type views:ItemContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ItemContent}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- 아이템 검색 필터 -->
                        <WrapPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
                            <TextBlock Text="아이템명/힌트:" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Width="150" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding ItemNameSearch, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="분류:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <ComboBox Width="100" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                      ItemsSource="{Binding ItemCategories}"
                                      SelectedItem="{Binding SelectedItemCategory}" />

                            <TextBlock Text="관련발견물:" VerticalAlignment="Center" Margin="10,0,5,0" />
                            <TextBox Width="150" Height="25" VerticalAlignment="Center" Margin="0,0,10,0"
                                     Text="{Binding ItemDiscoverySearch, UpdateSourceTrigger=PropertyChanged}" />

                            <Button Content="필터 초기화" Width="100" Height="30" Margin="10,0,0,0"
                                    Command="{Binding ResetItemFilterCommand}" />
                        </WrapPanel>

                        <!-- 아이템 데이터 그리드 -->
                        <units:CdsDataGrid Grid.Row="1"
                                  ItemsSource="{Binding Items}"
                                  Margin="10">
                            <units:CdsDataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                                <DataGridTextColumn Header="아이템명" Binding="{Binding Name}" Width="150" />
                                <DataGridTextColumn Header="분류" Binding="{Binding Category}" Width="80" />
                                <DataGridTextColumn Header="효과" Binding="{Binding Effect}" Width="60" />
                                <DataGridTextColumn Header="판매가" Binding="{Binding SellPrice, StringFormat=N0}" Width="80" />
                                <DataGridTextColumn Header="구매가" Binding="{Binding BuyPrice, StringFormat=N0}" Width="80" />
                                <DataGridTextColumn Header="힌트" Binding="{Binding Hint}" Width="150" />
                                <DataGridTextColumn Header="관련발견물" Binding="{Binding RelatedDiscovery}" Width="*" />
                            </units:CdsDataGrid.Columns>
                        </units:CdsDataGrid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
