<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Support.UI.Views">

    <Style TargetType="{x:Type views:EditCityPixelDialog}">
        <Setter Property="Background" Value="Azure"/>
        <Setter Property="Foreground" Value="Azure" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:EditCityPixelDialog}">
                    <Border Background="{TemplateBinding Background}" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 상단: 도시명 + 좌표 입력 -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- 첫번째 줄: 도시명, PixelX, PixelY, 도서관 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="도시명:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_CityNameTextBox" Width="120" Height="25"
                                         FontWeight="Bold" Margin="0,0,20,0" />

                                <TextBlock Text="PixelX:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_PixelXTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                                <TextBlock Text="PixelY:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_PixelYTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                                <CheckBox x:Name="PART_HasLibraryCheckBox" Content="도서관"
                                          VerticalAlignment="Center" Margin="0,0,15,0" />

                                <TextBlock Text="(지도 클릭으로 좌표 선택)"
                                           VerticalAlignment="Center"
                                           Foreground="Gray" FontStyle="Italic" />
                            </StackPanel>

                            <!-- 두번째 줄: 위도, 경도, 문화권 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Text="위도:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_LatitudeTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                                <TextBlock Text="경도:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_LongitudeTextBox" Width="80" Height="25" Margin="0,0,15,0" />

                                <TextBlock Text="문화권:" VerticalAlignment="Center" Margin="0,0,5,0" />
                                <TextBox x:Name="PART_CulturalSphereTextBox" Width="100" Height="25" Margin="0,0,15,0" />
                            </StackPanel>
                        </Grid>

                        <!-- 중앙: 지도 -->
                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                            <ScrollViewer x:Name="PART_MapScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image x:Name="PART_MapImage" Stretch="None" Cursor="Cross" />
                                    <Canvas x:Name="PART_MapCanvas"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            IsHitTestVisible="False" />
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <!-- 하단: 버튼 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                    HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="PART_OkButton" Content="확인" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True" />
                            <Button x:Name="PART_CancelButton" Content="취소" Width="80" Height="30" IsCancel="True" />
                        </StackPanel>
                    </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
