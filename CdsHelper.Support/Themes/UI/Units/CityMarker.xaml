<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units">

    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

    <Style TargetType="{x:Type units:CityMarker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:CityMarker}">
                    <Canvas Background="Transparent"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource TemplatedParent}}">
                        <Border x:Name="PART_MainBorder"
                                BorderThickness="1"
                                CornerRadius="4"
                                Width="{TemplateBinding MarkerSize}"
                                Height="{TemplateBinding MarkerSize}"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="DodgerBlue" />
                                    <Setter Property="BorderBrush" Value="DarkBlue" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Yellow" />
                                            <Setter Property="BorderBrush" Value="Red" />
                                            <Setter Property="BorderThickness" Value="3" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Button x:Name="PART_LibraryButton"
                                Canvas.Left="4"
                                Canvas.Top="-8"
                                Width="12"
                                Height="12"
                                Cursor="Hand"
                                Command="{Binding LibraryClickCommand}"
                                Visibility="{Binding HasLibrary, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibility}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="LibraryBorder"
                                            Background="Orange"
                                            BorderBrush="DarkOrange"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                        <TextBlock Text="&#46020;"
                                                   FontSize="8"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="LibraryBorder" Property="Background" Value="Gold" />
                                            <Setter TargetName="LibraryBorder" Property="BorderBrush" Value="DarkGoldenrod" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="LibraryBorder" Property="Background" Value="DarkOrange" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Border Canvas.Left="-8"
                                Canvas.Top="-8"
                                Width="12"
                                Height="12"
                                Background="SteelBlue"
                                BorderBrush="DarkSlateBlue"
                                BorderThickness="1"
                                CornerRadius="6">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasShipyard, RelativeSource={RelativeSource AncestorType=units:CityMarker}}" Value="True" />
                                                <Condition Binding="{Binding ShowShipyardMarker, RelativeSource={RelativeSource AncestorType=units:CityMarker}}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="&#51312;"
                                       FontSize="8"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>

                        <TextBlock Text="{Binding DisplayText, RelativeSource={RelativeSource TemplatedParent}}"
                                   FontSize="10"
                                   Foreground="Black"
                                   Visibility="{Binding IsLabelVisible, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibility}}"
                                   Canvas.Left="10"
                                   Canvas.Top="-4">
                            <TextBlock.Background>
                                <SolidColorBrush Color="White" Opacity="0.7" />
                            </TextBlock.Background>
                        </TextBlock>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
