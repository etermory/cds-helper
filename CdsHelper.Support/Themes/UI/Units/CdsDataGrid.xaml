<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units">

    <Style TargetType="{x:Type units:CdsDataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
        <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
        <Setter Property="RowHeaderWidth" Value="0"/>
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="#323232"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Grid>
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter Grid.Column="0"
                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="Center"/>
                                            <!-- 정렬 화살표 -->
                                            <Path x:Name="SortArrow"
                                                  Grid.Column="1"
                                                  Margin="5,0,0,0"
                                                  VerticalAlignment="Center"
                                                  Visibility="Collapsed"
                                                  StrokeThickness="0"/>
                                        </Grid>
                                    </Border>
                                    <!-- 컬럼 리사이즈 그립 -->
                                    <Thumb x:Name="PART_RightHeaderGripper"
                                           HorizontalAlignment="Right"
                                           Width="4"
                                           Cursor="SizeWE"
                                           Background="Transparent">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="Transparent" Width="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- 오름차순 - 빨간색 위 화살표 -->
                                    <Trigger Property="SortDirection" Value="Ascending">
                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="SortArrow" Property="Data" Value="M 0 6 L 4 0 L 8 6 Z"/>
                                        <Setter TargetName="SortArrow" Property="Fill" Value="#E53935"/>
                                    </Trigger>
                                    <!-- 내림차순 - 파란색 아래 화살표 -->
                                    <Trigger Property="SortDirection" Value="Descending">
                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="SortArrow" Property="Data" Value="M 0 0 L 4 6 L 8 0 Z"/>
                                        <Setter TargetName="SortArrow" Property="Fill" Value="#1E88E5"/>
                                    </Trigger>
                                    <!-- 마우스 오버 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#323232"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="8,4">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <!-- 마우스 오버 (선택 안됨) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsSelected" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="#E8F4FC"/>
                            <Setter Property="Foreground" Value="#104F89"/>
                        </MultiTrigger>
                        <!-- 선택됨 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#104F89"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <!-- 마우스 오버 + 선택됨 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsSelected" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="#1A6BB8"/>
                            <Setter Property="Foreground" Value="White"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 그룹 레벨별 배경색 -->
    <SolidColorBrush x:Key="GroupLevel0Background" Color="#104F89"/>
    <SolidColorBrush x:Key="GroupLevel1Background" Color="#1976D2"/>
    <SolidColorBrush x:Key="GroupLevel2Background" Color="#42A5F5"/>

    <!-- 그룹 아이템 스타일 (리소스로 정의) -->
    <Style x:Key="CdsDataGridGroupItemStyle" TargetType="{x:Type GroupItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GroupItem}">
                    <Expander IsExpanded="True" BorderThickness="0">
                        <Expander.Header>
                            <Border x:Name="HeaderBorder"
                                    Background="#104F89"
                                    CornerRadius="3"
                                    Padding="8,5"
                                    Margin="0,2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="GroupNameText"
                                               Text="{Binding Name}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="13"/>
                                    <TextBlock Text=" ("
                                               Foreground="#B0C4DE"
                                               Margin="5,0,0,0"/>
                                    <TextBlock Text="{Binding ItemCount}"
                                               Foreground="#B0C4DE"/>
                                    <TextBlock Text="개)"
                                               Foreground="#B0C4DE"/>
                                </StackPanel>
                            </Border>
                        </Expander.Header>
                        <ItemsPresenter Margin="15,0,0,5"/>
                    </Expander>
                    <ControlTemplate.Triggers>
                        <!-- 2단계 그룹 (하위) -->
                        <DataTrigger Binding="{Binding Level}" Value="1">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#1976D2"/>
                            <Setter TargetName="GroupNameText" Property="FontSize" Value="12"/>
                        </DataTrigger>
                        <!-- 3단계 그룹 -->
                        <DataTrigger Binding="{Binding Level}" Value="2">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#42A5F5"/>
                            <Setter TargetName="GroupNameText" Property="FontSize" Value="11"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
